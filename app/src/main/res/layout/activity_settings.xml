<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_user_weight_hint"
            android:id="@+id/settings_user_weight_header" />

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_user_weight"
                android:layout_marginBottom="10dp"
                android:inputType="none"
                android:hint="@string/settings_user_weight_header" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_user_height_hint"
            android:id="@+id/settings_user_height_header" />

        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_user_height"
                android:layout_marginBottom="10dp"
                android:inputType="none"
                android:hint="@string/settings_user_height_header" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_male_female_header"
            android:id="@+id/settings_user_male_female_header" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:transitionGroup="false"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_male_radiobutton"
                android:id="@+id/settings_user_male_radio_button"
                android:layout_marginRight="15dp"
                android:checked="true"
                android:layout_weight="1"
                android:enabled="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_female_radiobutton"
                android:id="@+id/settings_user_female_radio_button"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth_list_header_text"
            android:id="@+id/bluetooth_list_header_text" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_scan_button"
                android:id="@+id/bt_scan_button"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/bt_available_devices" />

            <ProgressBar
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:id="@+id/bt_scan_progress"
                android:max="100"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>